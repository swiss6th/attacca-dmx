[Unit]
Description=Music Player Daemon @ %i
PartOf=mpd.target
BindsTo=mpd@6600.service
Requires=mpd@%i.socket
After=network.target sound.target mpd.target mpd@6600.service
AssertFileNotEmpty=/home/pi/mpd@%i.conf

[Service]
ExecStart=/usr/bin/mpd --no-daemon /home/pi/mpd@%i.conf

# allow MPD to use real-time priority 50
LimitRTPRIO=50
LimitRTTIME=infinity

# disallow writing to /usr, /bin, /sbin, ...
ProtectSystem=yes

[Install]
WantedBy=mpd.target
DefaultInstance=6600